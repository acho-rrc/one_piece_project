<!-- app/views/crews/show.html.erb -->
<div class="container">
  <div class="panel">
    <h1><%= @crew.name %></h1>

    <ul>
      <li><strong>Sea:</strong> <%= @crew.sea %></li>
      <li><strong>Island:</strong> <%= @crew.island %></li>
      <li><strong>Ship:</strong>
        <% if @crew.ship %>
          <%= link_to @crew.ship.name, ship_path(@crew.ship) %>
        <% else %> â€” <% end %>
      </li>
    </ul>

    <h3 class="mt-3">Pirates</h3>
    <div class="table-wrap mt-2">
      <table>
        <thead>
          <tr><th>Name</th><th></th></tr>
        </thead>
        <tbody>
          <% @crew.pirates.order(:name).each do |p| %>
            <tr>
              <td><%= p.name %></td>
              <td><%= link_to "Show", pirate_path(p), class: "btn" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <p class="mt-3" style="display:flex; gap:12px; flex-wrap:wrap;">
      <%= link_to "Edit", edit_crew_path(@crew), class: "btn" %>
      <%= link_to "Back", crews_path, class: "btn secondary" %>
    </p>
  </div>
</div>
